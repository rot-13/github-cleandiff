{
    "manifest_version": 2,

    "name": "Github Cleandiff",
    "description": "Remove -/+ when copying GitHub diffs",
    "version": "0.0.2",

    "permissions": [
        "<all_urls>"
    ],
    "content_scripts": [{
      "matches": ["*://*.github.com/*"],
      "js": ["github-cleandiff.js"],
      "css": ["github-cleandiff.css"],
      "run_at": "document_end"
    }],
    "icons": {
        "16":  "logo16.png",
        "48":  "logo48.png",
        "128": "logo128.png"
    }

}
